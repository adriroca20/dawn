<div class="threeah-selection">
  <div class="selection-title">{{ section.settings.section_title }}</div>
  <div class="selection-list">
    {% for block in section.blocks %}
      {% render '3ah-selection-item',
        title: block.settings.title,
        media_type: block.settings.media_type,
        media: block.settings.media,
        link: block.settings.link
      %}
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "3ah Selection",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Título de la sección",
      "default": "UNA SELECCIÓN DE LA FIRMA"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item de selección",
      "settings": [
        { "type": "text", "id": "title", "label": "Título" },
        {
          "type": "select",
          "id": "media_type",
          "label": "Tipo de media",
          "options": [
            { "value": "image", "label": "Imagen" },
            { "value": "video", "label": "Video" }
          ]
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "video_url",
          "id": "video",
          "label": "Video (opcional)",
          "accept": ["youtube", "vimeo"]
        },
        { "type": "url", "id": "link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [
    {
      "name": "3ah Selection",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "title": "Bolsos de verano para mujer",
            "media_type": "image",
            "media": "https://via.placeholder.com/400x260?text=Bolso+Mujer",
            "link": "#"
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Calzado de verano para mujer",
            "media_type": "image",
            "media": "https://via.placeholder.com/400x260?text=Calzado+Mujer",
            "link": "#"
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Calzado de verano para hombre",
            "media_type": "image",
            "media": "https://via.placeholder.com/400x260?text=Calzado+Hombre",
            "link": "#"
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Bolsos para Hombre",
            "media_type": "image",
            "media": "https://via.placeholder.com/400x260?text=Bolso+Hombre",
            "link": "#"
          }
        }
      ]
    }
  ]
}
{% endschema %}
