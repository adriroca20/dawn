{{ '3ah-services.css' | asset_url | stylesheet_tag }}

<section class="threeah-services">
  <div class="container">
    <h2 class="services-title">SERVICIOS 3AH</h2>
    <div class="services-list">
      {% for block in section.blocks %}
        {% render '3ah-service',
          title: block.settings.title,
          description: block.settings.description,
          link: block.settings.link,
          image: block.settings.image,
          video: block.settings.video
        %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "3AH Servicios",
  "settings": [
    {
      "type": "header",
      "content": "Servicios Gucci"
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Servicio",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "video_url",
          "id": "video",
          "label": "Video (opcional)",
          "accept": ["youtube", "vimeo"]
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Servicios 3AH",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "title": "CONCERTAR UNA CITA",
            "description": "Disfrute de acceso prioritario a la tienda que prefiera el día y la hora que más le convengan. Cuando llegue, su asesor de clientes le mostrará una selección de piezas cuidadosamente seleccionadas para que se las pruebe y las combine.",
            "link": "#",
            "image": "shopify://shop_images/servicio-cita.jpg",
            "video": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "title": "RECOGIDA EN TIENDA",
            "description": "Haga su pedido online y recójalo en la tienda Gucci que prefiera.",
            "link": "#",
            "image": "shopify://shop_images/servicio-recogida.jpg",
            "video": ""
          }
        },
        {
          "type": "service",
          "settings": {
            "title": "PERSONALIZACIÓN",
            "description": "Puede incluir un estampado en relieve en distintos bolsos, artículos de equipaje, cinturones, accesorios de piel y productos de la colección para mascotas con iniciales para crear una pieza verdaderamente exclusiva.",
            "link": "#",
            "image": "shopify://shop_images/servicio-personalizacion.jpg",
            "video": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}
