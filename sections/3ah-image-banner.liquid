{% comment %} Hero actualizado tipo dark theme, inspirado en el diseño adjunto {% endcomment %}
{{ '3ah-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .threeah-hero__background::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

<section class="threeah-hero dark-theme">
  <div class="threeah-hero__container">
    <h1 class="threeah-hero__title">
      Productos profesionales<br>
      para tu salón
    </h1>
    <p class="threeah-hero__subtitle">
      Conecta con la excelencia y transforma tu negocio con nuestra línea premium de productos para peluquería,
      diseñados para profesionales exigentes.
    </p>
    <form class="threeah-hero__form">
      <input type="email" placeholder="tu@email.com" class="threeah-hero__input">
      <button type="submit" class="threeah-hero__button">Recibir ofertas</button>
    </form>
    <div class="threeah-hero__showcase">
      <div class="threeah-hero__showcase-img-wrapper">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="Productos de peluquería profesional"
            class="threeah-hero__showcase-img"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {% else %}
          <div class="threeah-hero__placeholder"></div>
        {% endif %}
        <div class="threeah-hero__showcase-overlay">
          <div class="threeah-hero__showcase-content">
            <div>
              <h3 class="threeah-hero__showcase-title">Colección Premium</h3>
              <p class="threeah-hero__showcase-desc">Descubre nuestra nueva línea de productos</p>
            </div>
            <a href="{{ section.settings.button_link }}" class="threeah-hero__showcase-btn">Ver catálogo</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "3AH Hero Dark",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen principal"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Opacidad del overlay",
      "default": 80
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón catálogo"
    }
  ],
  "presets": [
    {
      "name": "Hero dark 3ah"
    }
  ]
}
{% endschema %}
