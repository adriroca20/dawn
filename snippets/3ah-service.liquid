<div class="3ah-service">
  <div class="service-media">
    {% if video %}
      <div class="service-video">
        <iframe src="{{ video | replace: 'watch?v=', 'embed/' }}" frameborder="0" allowfullscreen></iframe>
      </div>
    {% elsif image %}
      <img
        src="{{ image | img_url: '800x' }}"
        alt="{{ title }}"
        class="service-image"
        loading="lazy"
        width="350"
        height="220"
      >
    {% endif %}
  </div>
  <div class="service-content">
    <h3 class="service-title">{{ title }}</h3>
    <p class="service-description">{{ description }}</p>
    {% if link %}
      <a href="{{ link }}" class="service-link" target="_blank" rel="noopener">Descubrir</a>
    {% endif %}
  </div>
</div>

<style>
  .3ah-service {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    padding: 24px 18px 32px 18px;
    max-width: 350px;
    flex: 1 1 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .service-media {
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .service-image,
  .service-video iframe {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 8px;
  }
  .service-title {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 0.7rem;
  }
  .service-description {
    font-size: 1rem;
    margin-bottom: 1.2rem;
    color: #222;
  }
  .service-link {
    display: inline-block;
    padding: 0.5em 1.2em;
    background: #000;
    color: #fff;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
  }
  .service-link:hover {
    background: #222;
  }
</style>
