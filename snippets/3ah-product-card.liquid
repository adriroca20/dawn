{%- style -%}
  .threeah-product-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .threeah-product-card:hover {
    transform: translateY(-5px);
  }

  .threeah-product-card__image {
    width: 100%;
    height: auto;
    border-radius: 4px;
    object-fit: cover;
  }

  .threeah-product-card__title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
  }

  .threeah-product-card__price {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .threeah-product-card__button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background-color: var(--color-primary);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .threeah-product-card__button:hover {
    background-color: var(--color-primary-dark);
  }

  .threeah-product-card__button-icon {
    width: 20px;
    height: 20px;
  }
  .threeah-product-card__link {
    text-decoration: none;
    color: inherit;
  }
{%- endstyle -%}

<div class="threeah-product-card">
  <a href="{{ product.url }}" class="threeah-product-card__link">
    <img
      src="{{ product.featured_image | img_url: '300x300' }}"
      alt="{{ product.title }}"
      class="threeah-product-card__image"
      loading="lazy"
      width="300"
      height="300"
    >
  </a>

  <h3 class="threeah-product-card__title">
    <a href="{{ product.url }}">{{ product.title }}</a>
  </h3>

  <div class="threeah-product-card__price">
    {{ product.price | money }}
  </div>

  <button class="threeah-product-card__button" data-product-id="{{ product.id }}">
    <svg class="threeah-product-card__button-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 22C9.55228 22 10 21.5523 10 21C10 20.4477 9.55228 20 9 20C8.44772 20 8 20.4477 8 21C8 21.5523 8.44772 22 9 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
