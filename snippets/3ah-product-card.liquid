{%- style -%}
  .threeah-product-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: transparent;
    border-radius: 0;
    overflow: hidden;
    transition: all 0.3s;
    padding: 0;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }
  .threeah-product-card:hover {
    opacity: 0.9;
  }
  .threeah-product-card__image-wrapper {
    height: 450px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    background: #161616;
  }
  .threeah-product-card__image {
    width: 300px;
    height: 300px;
    object-fit: contain;
    transition: transform 0.5s;
  }
  .threeah-product-card:hover .threeah-product-card__image {
    transform: scale(1.1);
  }
  .threeah-product-card__fav-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    color: #6b7280;
    cursor: pointer;
    transition: color 0.2s;
    z-index: 2;
    padding: 0.5rem;
  }
  .threeah-product-card__fav-btn:hover {
    color: #fff;
  }
  .threeah-product-card__info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: transparent;
  }
  .threeah-product-card__title {
    font-weight: 300;
    font-size: 1.125rem;
    margin: 0;
    color: #fff;
    padding-bottom: 0.5rem;
  }
  .threeah-product-card__price {
    font-size: 1.125rem;
    font-weight: 500;
    margin-top: 0.25rem;
    color: #fff;
  }
  .threeah-product-card__badge {
    background: #d97706;
    color: #fff;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    border-radius: 0;
    margin-left: 1rem;
    white-space: nowrap;
    text-transform: uppercase;
  }
  .threeah-product-card svg {
    width: 1.5rem;
    height: 1.5rem;
  }
{%- endstyle -%}

<a href="{{ product.url }}" class="threeah-product-card">
  <div class="threeah-product-card__image-wrapper">
    <img
      src="{{ product.featured_image | img_url: '300x300' }}"
      alt="{{ product.title }}"
      class="threeah-product-card__image"
      loading="lazy"
      width="300"
      height="300"
    >
  </div>
  <button class="threeah-product-card__fav-btn" aria-label="Añadir a favoritos">
    <svg
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 016.364 0L12 7.636l1.318-1.318a4.5 4.5 0 116.364 6.364L12 21.364l-7.682-7.682a4.5 4.5 0 010-6.364z"></path>
    </svg>
  </button>
  <div class="threeah-product-card__info">
    <div>
      <h3 class="threeah-product-card__title">{{ product.title }}</h3>
      <div class="threeah-product-card__price">
        {{ product.price | money }}
      </div>
    </div>
    <span class="threeah-product-card__badge">Edición Limitada</span>
  </div>
</a>
